    <EditTextPreference
        android:defaultValue="5"
        android:inputType="number"
        android:key="edit_text_Silence"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Seconds detected as Silence" />

    <EditTextPreference
        android:defaultValue="@string/word_count_interval_default"
        android:inputType="number"
        android:key="word_count_interval"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Word Count Interval" />

    <EditTextPreference
        android:defaultValue="@string/minimum_speech_interval_default"
        android:inputType="number"
        android:key="minimum_speech_interval"
        android:numeric="integer"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Minimum Speech Interval" />

    <EditTextPreference
        android:defaultValue="@string/minimum_words_vibration"
        android:inputType="number"
        android:key="minimum_words_vibration"
        android:numeric="integer"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Minimum Number of Words before vibration" />

    <EditTextPreference
        android:defaultValue="@string/keyword"
        android:inputType="text"
        android:key="keyword"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Keyword" />

</PreferenceScreen>
